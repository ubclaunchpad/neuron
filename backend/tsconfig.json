{
  "compilerOptions": {
    "target": "es2016",
    "module": "Node16",    
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,  
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "./src/common"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.test.ts"
  ]
}