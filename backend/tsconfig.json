{
  "compilerOptions": {
    "target": "es2017",
    "module": "Node16",    
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,  
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "typeRoots": [
        "./src/types"
        ],
  }

}